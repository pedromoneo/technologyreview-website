rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'pedro.moneo@gmail.com';
    }

    match /{allPaths=**} {
      // Anyone can view images
      allow read: if true;
      // Only admin can upload/delete
      allow write: if isAdmin();
    }
  }
}
