rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      let isSuperAdmin = request.auth != null && request.auth.token.email == 'pedro.moneo@gmail.com';
      let isAuthorized = request.auth != null && exists(/databases/$(database)/documents/authorized_users/$(request.auth.token.email.lower()));
      return isSuperAdmin || isAuthorized;
    }

    // Public collections for reading
    match /articles/{articleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /topics/{topicId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /estudios/{estudioId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users can read/write their own profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Authorized users list - only admins can see/modify
    match /authorized_users/{userEmail} {
      allow read, write: if isAdmin();
    }

    // Default deny for everything else - safety first
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
