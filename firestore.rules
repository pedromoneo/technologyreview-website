rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'pedro.moneo@gmail.com';
    }

    // Articles are public for reading, but only admin can write
    match /articles/{articleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Topics are public for reading, but only admin can write
    match /topics/{topicId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users collection - users can read their own profile, admin can do everything
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Default deny for everything else
    match /{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
